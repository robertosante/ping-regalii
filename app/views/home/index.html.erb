<h1 class='page-header'>Leaderboard</h1>

<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each.with_index(1) do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.email %></td>
        <td><%= user.rating %></td>
        <td><%= user.user_games.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
